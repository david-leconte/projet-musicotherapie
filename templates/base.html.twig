                                </div>
                            </div>
                            <div class="col-xl-10 col-lg-10 col-md-10">
                                <div class="menu-main d-flex align-items-center justify-content-end">
                                    <!-- Main-menu -->
                                    <div class="main-menu f-right d-none d-lg-block">
                                        <nav> 
                                            <ul id="navigation">
                                                <li><a href="{{ path('home')}}">Accueil</a></li>
                                                <li><a href="{{ path('services')}}">Services</a></li>
                                                <li><a href="{{ path('contact')}}">Contact</a></li>
                                                <li><a href="{{ path('about')}}">À propos</a></li>
                                                <li><a href="{{ fbLink }}" target="_blank" rel="noopener noreferrer"><i class="fab fa-facebook-square"></i></a></li>
                                            </ul>
                                        </nav>
                                    </div>
                                    <div class="header-right-btn f-right d-none d-lg-block ml-15">
                                        <a href="{{ path('app_login')}}" class="btn header-btn">
                                            {% if not app.user %}
                                            S'inscrire / Se connecter
                                            {% else %}
                                            Se déconnecter
                                            {% endif %}
                                        </a>
                                    </div>
                                </div>
                            </div>   
                            <!-- Mobile Menu -->
                            <div class="col-12">
                                <div class="mobile_menu d-block d-lg-none"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Header End -->
        </header>
        {% block body %}{% endblock %}


        {% block javascripts %}{% endblock %}

        <footer>
            <div class="footer-wrappr section-bg3" data-background="{{ asset('img/gallery/footer-bg.png') }}">
                <div class="footer-area footer-padding ">
                    <div class="container">
                        <div class="row justify-content-between">
                            <div class="col-xl-8 col-lg-8 col-md-6 col-sm-12">
