{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} | Confirmer réservation{% endblock %}
{% block additionalMeta %}<meta name="robots" content="noindex" />{% endblock %}

{% block body %}

{% if not app.user or not app.user.verified %}
<section>
    <div class="slider-area slider-area2">
        <div class="slider-active dot-style">
            <div class="single-slider  d-flex align-items-center slider-height2">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-xl-7 col-lg-8 col-md-10 ">
                            <div class="hero-wrapper">
                                <div class="hero__caption">
                                    <h1 data-animation="fadeInUp" data-delay=".3s">Veuillez vous connecter et vérifier votre compte</h1>
                                    <p data-animation="fadeInUp" data-delay=".6s">
                                        Réserver nécessite d'être connecté et d'avoir vérifié son compte via un e-mail envoyé automatiquement après inscription.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>    
        </div>
    </div>
</main>
{% else %}
<section class="form-section">
    <div class="container">
        <div class="section-top-border">
            <div class="row">
                <h1 class="col-12 text-heading">{{ title }}</h1>
                {{ form_start(form, { 'attr': { 'class': 'col-12 form' } }) }}
                    {% if type == "appointment" %}
                    <div class="input-group-icon mt-10">
                        <div class="icon"><i class="fa fa-users" aria-hidden="true"></i></div>
                        {{ form_widget(form.participants, { 'attr': { 'class': 'single-input form-control', 'placeholder': 'Combien de personnes' } }) }}
                    </div>
                    <div class="input-group-icon mt-10">
                        <div class="icon"><i class="fa fa-question" aria-hidden="true"></i></div>
                        <div class="form-select form-control" id="default-select">
                            {{ form_widget(form.causeType)}}
                        </div>
                    </div>
                    <div class="mt-10">
                        <div class="form-group">
                            {{ form_widget(form.completeCause, { 'attr': { 'class': 'form-control w-100','placeholder': cause_message }}) }}
                        </div>
                    </div>
                    {% elseif type == "group-session" %}
                    {% endif %}

                    <div class="input-group-icon mt-10">
                        <button type="submit" class="form-control genric-btn primary e-large">
                            {% if type == "appointment" %}
                            Confirmer rendez-vous
                            {% elseif type == "group-session" %}
                            Confirmer et payer pour cette session en ligne
                            {% endif %}
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</section>
{% endif %}
{% endblock %}