{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<section class="form-section">
    <div class="container">
        <div class="row">
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="col-12 alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}

            <h1 class="col-12 text-heading">S'inscrire</h1>

            <form name="registration_form" method="post" class="col-12 form">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Votre adresse e-mail" 
                    id="registration_form_email" name="registration_form[email]" required="required" maxlength="180">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" placeholder="Votre mot de passe"
                    id="registration_form_plainPassword" name="registration_form[plainPassword]" required="required">
                </div>
                <div class="form-group mb-3">
                    <label>
                        <input type="checkbox" id="registration_form_agreeTerms" name="registration_form[agreeTerms]" required="required" value="1">
                        Agr√©er aux termes d'utilisation
                    </label>
                </div>
                <button type="submit" class="btn btn-lg btn-primary col-12">S'inscrire</button>
                <input type="hidden" id="registration_form__token" name="registration_form[_token]" value="ESoGo5qeRwVNNXEEEWRmYTs9ueIq8sBBQYoYMtSG0MM">

                <a class="genric-btn link col-12" href="{{ path('app_login')}}" >Se connecter</a>
            </form>
        </div>
    </div>
</section>
{% endblock %}
